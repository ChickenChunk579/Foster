<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <Target Condition="$([MSBuild]::IsOSPlatform('Linux'))" Name="CopyLinuxLibs" AfterTargets="AfterBuild">
    <Copy SourceFiles="Platform/libs/lib64/libFosterPlatform.so" DestinationFolder="$(OutDir)" />
  </Target>

  <Target Condition="$([MSBuild]::IsOSPlatform('Windows'))" Name="CopyWindowsLibs" AfterTargets="AfterBuild">
    <Copy SourceFiles="Platform/libs/x64/FosterPlatform.dll" DestinationFolder="$(OutDir)" />
  </Target>

  <Target Condition="$([MSBuild]::IsOSPlatform('OSX'))" Name="CopyOSXLibs" AfterTargets="AfterBuild">
    <Copy SourceFiles="Platform/libs/osx/libFosterPlatform.dylib" DestinationFolder="$(OutDir)" />
  </Target>

</Project>
